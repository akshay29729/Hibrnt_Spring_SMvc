<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Loading properties file --> 
    <context:property-placeholder location="classpath:cricket.properties"/>
    <!-- Define your beans here -->
    <bean id="myFortuneService"
          class="com.springdemo.ioc.HappyFortuneService">
    </bean>
    <bean id="myCoach" class="com.springdemo.ioc.CricketCoach">
          <!-- <constructor-arg ref="myFortuneService"/>  -->  
          <property name="fortuneService" ref="myFortuneService" />
          
          <!-- Define hardcoded values -->
          <!-- <property name="emailAddress" value="practicecricketmail@gmail.com" />
          <property name="team" value ="Deccan Chargers" /> -->
          
          <!-- Define values from properties file -->
          <property name="emailAddress" value="${foo.email}" />
          <property name="team" value ="${foo.team}" />
    </bean>
    
</beans>